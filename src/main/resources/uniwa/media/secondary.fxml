<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>


<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="uniwa.media.client.SecondaryController">

  <WebView fx:id="webView" prefWidth="800" prefHeight="600"/>
  <!-- Optional: overlay a “Back” button and a label -->
  <VBox alignment="TOP_CENTER" spacing="5">
    <Label fx:id="fileLabel" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
    <Button text="Back" onAction="#switchToPrimary"/>
  </VBox>
</StackPane>
